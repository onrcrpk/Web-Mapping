/* Viewer Page */
/*-------------*/
.one-column {
	height:1500px;
  width:auto;
  max-width:1300px;
  max-height:1300px;
  clear:both;
  margin:0 auto;
}
   
  .one-column article {
    font-size:14px;
  }
   
  #web_map, #bar_chart {
    font-size:14px;
    line-height:25px;
    width:100%;
  }
   
  #web_map h2, #bar_chart h2 {
    font-size:20px;
    padding:20px 0 10px;
  }


  /*---------*/
/* Web Map */
/*---------*/


.legend {
  line-height: 18px;
  color: #555;
}
.legend i {
  width: 18px;
  height: 18px;
  float: left;
  margin-right: 8px;
  opacity: 0.7;
}